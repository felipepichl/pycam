{
  "expo": {
    "name": "PYCam",
    "slug": "PYCam",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#24242e"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.triadge.pycam",
      "infoPlist": {
        "NSCameraUsageDescription": "$(PRODUCT_NAME) precisa acessar sua câmera para funcionar como webcam.",
        "NSMicrophoneUsageDescription": "Este app precisa acessar o microfone para funcionar como webcam",
        "UIBackgroundModes": [
          "remote-notification"
        ]
      }
    },
    "android": {
      "package": "com.triadge.pycam",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#24242e"
      },
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "android.permission.CAMERA"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font",
      [
        "react-native-vision-camera",
        {
          "cameraPermissionText": "$(PRODUCT_NAME) precisa acessar sua câmera para funcionar como webcam.",
          "enableCodeScanner": false
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "8a2f65de-9dea-4b19-857b-100ba143ba5f"
      }
    }
  }
}
